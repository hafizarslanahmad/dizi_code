<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form|%>
    <div class="mb-3">
        <%= form.label :Name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter yor name"%>
    </div>
        <div class="mb-3">
        <%= form.label :Email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter yor email"%>
    </div>
    <div class="mb-3">
        <%= form.label :Password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
        <%= link_to "Forgot Your Password", password_reset_path%>
    </div>
    <div class="mb-3">
            <%= form.submit "SignUp", class: "btn btn-primary"%>
        </div>

<% end %>